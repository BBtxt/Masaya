---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class=" border py-2 px-4 rounded-xl " >
	<a href={href}>
		<h2 class="font-extrabold ">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="mt-2">
			{body}
		</p>
	</a>
</li>

